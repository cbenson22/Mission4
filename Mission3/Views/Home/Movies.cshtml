@{
    ViewData["Title"] = "The Joel Hilton Film Collection";
}
@model Mission3.Models.ApplicationResponse
<h1>Movies</h1>

<div>
    <p>Enter in your Movie Collection!</p>

    <br />

    <form method="post">
        <label>Category</label>
        <select asp-for="Category" required />
        <option disabled selected value=""> -- select an option -- </option>
        <option value="Action/Adventure">Action/Adventrue</option>
        <option value="Comedy">Comedy</option>
        <option value="Drama">Drama</option>
        <option value="Family">Family</option>
        <option value="Horror/Suspense">Horror/Suspense</option>
        <option value="Miscellaneous">Miscellaneous</option>
        <option value="Television">Television</option>
        <option value="VHS">VHS</option>
        </select>
        <br />
        <label>Title</label>
        <input asp-for="MovieName" required />
        <br />
        <label>Year</label>
        <input asp-for="Year" required />
        <br />
        <label>Rating</label>
        <select asp-for="Rating" required>
            <option disabled selected value=""> -- select an option -- </option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
        <br />
        <label>Director</label>
        <input asp-for="Director" required />
        <br />
        <label>Edited</label>
        <select asp-for="Edited">
            <option disabled selected value=""> -- </option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />
        <label>Lent To?</label>
        <input asp-for="LentTo" />
        <br />
        <label>Notes</label>
        <input asp-for="Notes" maxlength="25" />
        <br />

        <button type="submit">Submit Movie</button>


    </form>
</div>
